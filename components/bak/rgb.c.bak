#include<wiringPi.h>
#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>

#define R 04
#define G 13
#define B 18
// #define R 7
// #define G 23
// #define B 1
int main(void){
    if(wiringPiSetupGpio() < 0){
        perror("启动树梅派GPIO失败");
        exit(1);
    }
    pinMode(R,OUTPUT);
    pinMode(G,OUTPUT);
    pinMode(B,OUTPUT);
    while(1){
        digitalWrite(R,1);
        sleep(1);
        digitalWrite(G,1);
        sleep(1);
        digitalWrite(G,0);
        digitalWrite(B,1);
        sleep(1);
        digitalWrite(R,0);
        digitalWrite(B,0);
        digitalWrite(G,1);
        sleep(1);
        digitalWrite(B,1);
        sleep(1);
        digitalWrite(G,0);
        sleep(1);
        digitalWrite(G,1);
        digitalWrite(R,1);
        sleep(1);
    }
}